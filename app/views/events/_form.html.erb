<%= form_with(model: event, class: "card") do |form| %>
  <% if event.errors.any? %>
    <div class="alert">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter event title" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 5, placeholder: "Describe your event" %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, placeholder: "Where will the event take place?" %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_field :date %>
  </div>

  <% if current_user && form.object.new_record? %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <% end %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
